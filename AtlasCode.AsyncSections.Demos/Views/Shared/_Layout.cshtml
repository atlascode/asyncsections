@* Required so you have extention methods for client timings *@
@using StackExchange.Profiling;
<!DOCTYPE html>
<html>
<head>
	@* optional (enable client timing framework) *@ 
    @this.InitClientTimings()
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/themes/base/css", "~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
	<script type="text/javascript" src="@Url.Content("~/Scripts/jsTransform-0.0.1.js")"></script>@* Setup: Add jsTransform *@
</head>
<body>

	<h1>AtlasCode.AsyncSections.Demos</h1>
	<ul>
		<li>@Html.ActionLink("Comparison", "Index", "Comparison")</li>
		<li>@Html.ActionLink("Multiple Tasks", "Index", "MultipleTask")</li>
		<li>@Html.ActionLink("Console", "Index", "Console")</li>
		<li>@Html.ActionLink("Progress", "Index", "Progress")</li>
		<li>@Html.ActionLink("Script Ordering", "Index", "ScriptOrder")</li>
		<li>@Html.ActionLink("Bare Minimum", "Index", "Minimum")</li>
	</ul>

    @Scripts.Render("~/bundles/jquery")
    
	@this.RenderBodyAsync() @* Setup: Change RenderBody to use RenderBodyAsync()*@

	@*From this point down, nothing is send to the browser until all async tasks have completed*@

	@MiniProfiler.RenderIncludes()

	@RenderSection("scripts", required: false)
</body>
</html>